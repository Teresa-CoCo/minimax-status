{
  "name": "minimax-status-vscode",
  "displayName": "MiniMax Status",
  "description": "在 VS Code 状态栏显示 MiniMax Claude Code 使用状态",
  "version": "1.0.0",
  "publisher": "JochenYang",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "minimaxStatus.setup",
        "title": "MiniMax Status: 配置向导",
        "category": "MiniMax",
        "description": "配置 MiniMax 访问令牌和组 ID"
      },
      {
        "command": "minimaxStatus.refresh",
        "title": "MiniMax Status: 刷新状态",
        "category": "MiniMax",
        "description": "手动刷新 MiniMax 状态"
      }
    ],
    "configuration": {
      "title": "MiniMax Status",
      "properties": {
        "minimaxStatus.token": {
          "type": "string",
          "default": "",
          "description": "MiniMax 访问令牌",
          "order": 1
        },
        "minimaxStatus.groupId": {
          "type": "string",
          "default": "",
          "description": "MiniMax 组 ID",
          "order": 2
        },
        "minimaxStatus.refreshInterval": {
          "type": "number",
          "default": 30,
          "description": "刷新间隔（秒）",
          "order": 3
        },
        "minimaxStatus.showTooltip": {
          "type": "boolean",
          "default": true,
          "description": "显示详细提示信息",
          "order": 4
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "package": "vsce package",
    "install-test": "npm install"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "eslint": "^8.56.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "keywords": [
    "minimax",
    "status",
    "claude"
  ],
  "author": "Jochen Yang",
  "license": "MIT"
}
